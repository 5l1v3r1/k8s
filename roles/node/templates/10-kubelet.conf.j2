[Service]
Environment="KUBELET_KUBECONFIG_ARGS=--bootstrap-kubeconfig=/etc/kubernetes/bootstrap.kubeconfig --kubeconfig=/etc/kubernetes/kubelet.kubeconfig"
Environment="KUBELET_CONFIG_ARGS=--config=/etc/kubernetes/kubelet.yml"
Environment="KUBELET_ARGS=--cgroup-driver=systemd --network-plugin=cni --pod-infra-container-image=gcr.azk8s.cn/google-containers/pause:3.1 --cert-dir=/etc/kubernetes/pki --root-dir=/var/lib/kubelet"
EnvironmentFile=-/etc/sysconfig/kubelet
ExecStart=
ExecStart=/usr/bin/kubelet $KUBELET_KUBECONFIG_ARGS $KUBELET_CONFIG_ARGS $KUBELET_ARGS $KUBELET_EXTRA_ARGS